<h1>投稿一覧</h1>
<%= link_to "新規投稿", new_book_path %> 
<table>
  <tr>
    <th>タイトル</th>
    <th>本文</th>
    <th>投稿者</th>
    <th>詳細</th>
    <th>投稿日時</th>
    <th>更新日時</th>
  </tr>
<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= book.user.name %></td>
    <td><%= link_to "show", book_path(book) %></td>
    <td><%= book.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
    <td><%= book.updated_at.strftime('%Y/%m/%d %H:%M:%S') %>
  </tr>
<% end %>
</table>
<%= paginate @books %>